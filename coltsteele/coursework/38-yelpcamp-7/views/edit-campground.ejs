<%- include('partials/header') %> <%- include('partials/navbar') %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to <a href="/">YelpCamp</a></h1>
        <h2>Edit <%= camp.name %></h2>
        <p>Change the details of the campground you submitted.</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds"
            >View Campgrounds</a
        >
    </div>
</header>

<main class="new-campground">
    <div class="container">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name-input">Campground Name</label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    id="name-input"
                    placeholder="Undermountain Springs"
                    value="<%= camp.name %>"
                />
            </div>
            <div class="form-group">
                <label for="desc-input">Campground Description</label>
                <input
                    class="form-control"
                    type="text"
                    name="desc"
                    id="desc-input"
                    placeholder="Trees, fish, secluded from society"
                    value="<%= camp.desc %>"
                />
            </div>
            <div class="form-group">
                <label for="image-input">Image URL</label>
                <input
                    class="form-control"
                    type="text"
                    name="image"
                    id="image-input"
                    placeholder="https://campgroundpics.com/"
                    value="<%= camp.image %>"
                />
            </div>
            <input
                class="btn btn-block btn-lg btn-primary"
                type="submit"
                value="Edit Campground"
            />
        </form>
    </div>
</main>

<%- include('partials/footer') %>
