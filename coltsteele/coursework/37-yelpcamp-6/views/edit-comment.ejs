<%- include('partials/header') %> <%- include('partials/navbar') %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to <a href="/">YelpCamp</a></h1>
        <h2>Edit your comment on <%= camp.name %></h2>
        <p>Change what you wrote and no one will ever know!</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/<%= camp.id %>"
            >Back to <%= camp.name %></a
        >
    </div>
</header>

<main class="new-comment">
    <div class="container">
        <form action="/campgrounds/<%= camp.id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <p><strong>Commenting as <%= user.username %></strong></p>
            </div>
            <div class="form-group">
                <label for="text-input">Comment Text</label>
                <textarea
                    class="form-control"
                    type="text"
                    name="text"
                    id="text-input"
                ><%= comment.text %></textarea>
            </div>
            <input
                class="btn btn-block btn-lg btn-primary"
                type="submit"
                value="Edit Comment"
            />
        </form>
    </div>
</main>

<%- include('partials/footer') %>
